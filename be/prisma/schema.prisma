generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Users {
  id             String   @id @default(auto()) @map("_id") @db.ObjectId
  username       String   @unique
  password       String
  xp             Int      @default(0)
  is_admin       Boolean  @default(false)
  remember_token String?  @unique
  created_at     DateTime @default(now())
  updated_at     DateTime @updatedAt

  @@map("users")
}

model Materials {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  description String?
  content     Json[]
  level       Int
  uploaded    Boolean  @default(false)
  created_at  DateTime @default(now())
  updated_at  DateTime @updatedAt

  @@map("materials")
}

model Quizzes {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  title      String
  content    Json[]
  level      Int
  uploaded   Boolean  @default(false)
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  @@map("quizzes")
}

// Note: For uploaded to be true in Materials and Quizzes, all users must be notified and all files must be uploaded
model Notifications {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  user_id    String   @map("user_id")
  content    String
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
}