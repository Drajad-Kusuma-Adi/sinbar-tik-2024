generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id             String   @id @default(uuid()) @map("_id")
  name           String
  email          String   @unique
  password       String
  xp             Int      @default(0)
  is_admin       Boolean  @default(false)
  remember_token String
  created_at     DateTime @default(now())
  updated_at     DateTime @default(now())

  @@map("users")
}

model Materials {
  id          String   @id @default(uuid()) @map("_id")
  title       String
  description String
  content     Json
  created_at  DateTime @default(now())
  updated_at  DateTime @default(now())

  @@map("materials")
}

model Quiz {
  id         String   @id @default(uuid()) @map("_id")
  title      String
  content    Json[]
  created_at DateTime @default(now())
  updated_at DateTime @default(now())

  @@map("quizzes")
}
