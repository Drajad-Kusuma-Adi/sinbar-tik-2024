generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Users {
  id             String   @id @default(auto()) @map("_id") @db.ObjectId
  username       String   @unique
  password       String
  xp             Int      @default(0)
  is_admin       Boolean  @default(false)
  remember_token String?  @unique
  created_at     DateTime @default(now())
  updated_at     DateTime @updatedAt

  @@map("users")
}

model Materials {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  description String?
  content     Json[]
  level       Int
  created_at  DateTime @default(now())
  updated_at  DateTime @updatedAt

  @@map("materials")
}

model Quizzes {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  title      String
  content    Json[]
  level      Int
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  @@map("quizzes")
}
